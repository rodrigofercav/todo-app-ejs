<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/styles.css">
    <title>To Do List App</title>
</head>
<body>  
    <div class="box" id="heading">
        <h1><%= currentDate %></h1>
    </div>

    <div class="box">
        <% todoList.map((todoItem) => { %>
            <div class="item">
            <input type="checkbox" <% if (todoItem.status === 1) { %> checked <% } %> >
                <p><%= todoItem.description %> </p>
            </div>
        <% }) %>
        
        <% //todoList.map((todoItem) => { %>
<!--             <div class="item">
            <input type="checkbox" <% //if (todoItem.status === 1) { %> checked <% //} %> >
                <p><%= //todoItem.description %> </p>
            </div> -->
        <% //}) %>

        <form class="item" action="/" method="post">
            <input type="text" name="newTodo" placeholder="New To Do" autocomplete="off" required>
            <button type="submit">+</button>
        </form>
    </div>
</body>
</html>