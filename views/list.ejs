<%- include('header') %>

<div class="box" id="heading">
    <h1><%= currentDate %></h1>
</div>
<div class="box">
    <% todoList.map((todoItem) => { %>
    <div class="item">
        <input type="checkbox" <% if (todoItem.status) { %> checked <% } %>>
        <p><%= todoItem.description %> </p>
    </div>
    <% }) %>

    <form class="item" action="/" method="post">
        <input type="text" name="newTodo" placeholder="New To Do" autocomplete="off" required>
        <button type="submit">+</button>
    </form>
</div>

<%- include ('footer') %>
